<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/listitem_background">

    <FrameLayout
        android:id="@+id/fl_status"
        android:layout_width="17dp"
        android:layout_height="98dp"
        android:layout_margin="1dp"
        android:background="#1ba100"></FrameLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/fl_status"
        android:src="@drawable/clock" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageView4"
        android:fontFamily="sans-serif"
        android:text="45 mins"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time"
        android:layout_below="@+id/imageView4"
        android:fontFamily="serif"
        android:text="Exercise for guita" />

    <ImageView
        android:id="@+id/iv_checkbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="-50dp"
        android:src="@drawable/transition"
        android:visibility="invisible" />


</RelativeLayout>